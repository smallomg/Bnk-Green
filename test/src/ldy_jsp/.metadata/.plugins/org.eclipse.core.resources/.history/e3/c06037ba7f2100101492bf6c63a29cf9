<fmt:formatNumber value="1234567.89" type="number" groupingUsed="true" />
<!-- 출력: 1,234,567.89 -->

<fmt:formatNumber value="0.75" type="percent" />
<!-- 출력: 75% -->

<fmt:formatNumber value="1234.56" type="currency" />
<!-- 출력: ₩1,234.56 (locale에 따라 다름) -->

</body>
